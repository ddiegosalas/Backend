<form style="margin: 15px; padding: 10px;" action="http://localhost:2020/nuevo/" method="post" enctype="multipart/form-data">
  <div class="mb-3" style="width: 500px;">
    <label class="form-label">Instrumento</label>
    <input type="text" class="form-control" name="instrumento">
  </div>
  <div class="mb-3" style="width: 500px;">
    <label class="form-label">Marca</label>
    <input type="text" class="form-control" name="marca">
  </div>
    <div class="mb-3" style="width: 500px;">
    <label class="form-label">Modelo</label>
    <input type="text" class="form-control" name="modelo">
  </div>
  <div class="mb-3" style="width: 500px;">
    <label class="form-label">Precio</label>
    <input type="text" class="form-control" name="precio">
  </div>
  <div class="mb-3" style="width: 500px;">
    <label class="form-label">Codigo</label>
    <input type="text" class="form-control" name="codigo">
  </div>
  <div class="mb-3" style="width: 500px;">
    <label class="form-label">Imagen</label>
    <input type="file" class="form-control" name="file">
  </div>
  <button type="submit" value="submit" class="btn btn-primary">Cargar</button>
</form>

<div style="padding: 10px;">
    {{#each productos}}
        <div class="card" style="width: 250px; padding: 15px; margin: 10px;">
            <img src="http://localhost:2020/static/imagenes/{{this.imagen}}" class="card-img-top" alt="..."/>
            <div class="card-body" style="padding: 10px;">
                <h5 class="card-title">{{this.instrumento}}</h5>
                <h6>${{this.precio}}</h6>
                <p class="card-text">{{this.marca}} - {{this.modelo}}</p>
                <a href="#" class="btn btn-primary">Comprar</a>
            </div>
        </div>
    {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/static/js/index.js"></script>